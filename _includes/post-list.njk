<ul class="grid posts">
  {% for post in posts %}
  <li>
    <a href="{{post.url}}">
      <div class="image">
        {%- if post.data.featuredImage %}
        <img src="{{post.data.featuredImage}}" alt="" />
        {% endif -%}
      </div>
      <p>
        <strong>{{post.data.title}}</strong>
        <small class="date">{{post.date | postDate}}</small>
      </p>
    </a>
  </li>
  {% endfor %}
</ul>
