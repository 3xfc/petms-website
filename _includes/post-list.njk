<ul class="grid posts">
  {% for post in posts %}
  <li>
    <a href="{{post.url}}">
      {% if post.data.featuredImage %}<img src="{{post.data.featuredImage}}" alt="" />{% endif %}
      <p>
        <strong>{{post.data.title}}</strong>
        <small>{{post.date | postDate}}</small>
      </p>
    </a>
  </li>
  {% endfor %}
</ul>