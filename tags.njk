---
layout: wrapper.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: Tagged "{{ tag }}"
---

<ul class="grid">
  {%- set posts = collections[ tag ] %}
  {%- for post in posts %}
  <li>
    <a href="{{post.url}}">
      <p>{{post.data.title}}</p>
      <small>{{post.date | postDate}}</small>
    </a>
  </li>
  {%- endfor %}
</ul>
